@model IEnumerable<Entidades.Producto>

@{
    ViewData["Title"] = "Registros_Productos";
}

<style>

    /* Estilos Del Cuadro */
    .form-container {
        max-width: 540px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        /* Estilos Para h1 */
        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>


<div class="form-container">
    <h1>Productos Registrados</h1><br />

    <p>
        <a asp-action="Registrar_Producto" class="btn btn-dark">Registrar Nuevo</a>
    </p>

    <div class="table-responsive">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("NOMBRE")
                    </th>
                    <th>
                        @Html.DisplayName("PRECIO")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>$ @item.Precio</td>
                        <td>
                            <div class="d-flex flex-wrap">
                                <div class="btn-group">
                                    <a asp-action="Editar_Producto" asp-route-id="@item.IdProducto" class="btn btn-primary rounded">Editar</a>
                                    <a asp-action="Detalle_Producto" asp-route-id="@item.IdProducto" class="btn btn-secondary rounded">Detalles</a>
                                    <a asp-action="Eliminar_Producto" asp-route-id="@item.IdProducto" class="btn btn-danger rounded">Eliminar</a>
                                </div>
                                <style>
                                    .btn-group {
                                        display: flex;
                                        gap: 5px;
                                    }

                                    .btn {
                                        flex: 1;
                                        border-radius: 5px;
                                    }
                                </style>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

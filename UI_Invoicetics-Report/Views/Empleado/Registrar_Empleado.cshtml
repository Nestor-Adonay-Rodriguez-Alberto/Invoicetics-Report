@model Entidades.Empleado

@{
    ViewData["Title"] = "Registrar_Empleado";
}

<style>
    /* Estilos Para Cuadro */
    .form-container {
        max-width: 600px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>

<div class="form-container">
    <h1>Registro</h1><br />

    <h5>Datos Personales</h5>
    <hr />
    <form asp-action="Registrar_Empleado" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Fila #1 -->
        <div class="row">

            <div class="form-group col-md-7">
                <label class="control-label">NOMBRE:</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
                <label class="control-label">FECHA NACIMIENTO:</label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

        </div>

        <!-- Fila #2 -->
        <div class="row">

            <div class="form-group col-md-8">
                <label class="control-label">EMAIL:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label">SALARIO:</label>
                <input type="number" asp-for="Salaraio" class="form-control" />
                <span asp-validation-for="Salaraio" class="text-danger"></span>
            </div>
        </div>

        <!-- Fila #3 -->
        <div class="row">

            <div class="form-group col-md-8">
                <label class="control-label">FOTOGRAFIA</label>
                <input type="file" id="ImagenEmpleado" onchange="MostrarImagenEmpleado()" accept="image/*" asp-for="Fotografia" class="form-control" />
                <div class="col-sm-10">
                    <img id="VistaImagenEmpleado" src="~/img/defecto.jpg" style="max-height:100px;max-width:100px" />
                </div>
            </div>

        </div>

        <!-- BOTONES -->
        <div class="row">

            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
                <a asp-action="Registros_Empleados" class="btn btn-secondary">CANCELAR</a>
            </div>

        </div>



    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Vista Previa De Imagen -->
    <script>

        function MostrarImagenEmpleado() {

            var Imagen_Obtenida = document.getElementById('ImagenEmpleado');

            if (Imagen_Obtenida.files && Imagen_Obtenida.files[0]) {
                // Lector De Archivos:
                var Lector = new FileReader();

                // Guardamos la imagen en un evento
                Lector.onload = function (e) {
                    document.getElementById('VistaImagenEmpleado').src = e.target.result;
                }

                //Convertimos el archivo en Base64:
                Lector.readAsDataURL(Imagen_Obtenida.files[0]);
            }
        }

    </script>
}
